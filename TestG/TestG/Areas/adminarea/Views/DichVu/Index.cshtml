@using TestG.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<TestG.Models.TienCong>
@{
    ViewBag.Title = "Index";
}
@helper Truncate(string s, int length)
{
    if (s.Length < length)
    {
        @s
    }
    else
    {
        @s.Substring(0, length)<text>...</text>
    }
}
<!-- Custom fonts for this template-->
<link href="~/Acsset/AccssetAdmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet">

<!-- Custom styles for this template-->
<link href="~/Acsset/AccssetAdmin/css/sb-admin-2.min.css" rel="stylesheet">
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Dịch vụ</h6>
    </div>
    <p class="btn btn-google align-bottom ">
        @Html.ActionLink("Thêm mới", "Create")
    </p>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>ID dịch vụ</th>
                        <th>Tên dịch vụ</th>
                        <th>Giá</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>ID dịch vụ</th>
                        <th>Tên dịch vụ</th>
                        <th>Giá</th>
                        <th>Chức năng</th>
                    </tr>
                </tfoot>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.IDTienCong)</td>
                            <td>@Html.Raw(Truncate(item.Ten, 70).ToString())</td>
                            <td>@Html.FormatValue(item.GiaTri, "{0:#,##0}")</td>
                            <td>
                                <a href="@Url.Action("Edit", new { id = item.IDTienCong })" class="btn btn-circle btn-danger" role="button">Sửa</a>
                                <a href="@Url.Action("Delete", new { id = item.IDTienCong })" class="btn btn-icon-split btn-dark" role="button">Xóa</a>
                            </td>
                        </tr>
                        <tr>
                        </tr>

                    </tbody>
                }
            </table>
        </div>
    </div>
    </div>
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>

    <style>
        .MenuTrang {
            display: inline;
            text-align: center;
        }
    </style>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Acsset/AccssetAdmin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Acsset/AccssetAdmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Acsset/AccssetAdmin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Acsset/AccssetAdmin/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
